# npm Configuration
# Helps prevent issues with npm v10.9.x bugs

# Use legacy peer dependencies resolution
legacy-peer-deps=false

# Strict engine checking - warns if npm version is problematic
engine-strict=false

# Prefer offline cache when available
prefer-offline=false

# Disable audit during install (speeds up install)
audit=false

# Disable funding messages
fund=false

# Log level
loglevel=warn

# Save exact versions (no ^ or ~)
save-exact=false

# Note: If you encounter ERR_INVALID_ARG_TYPE errors:
# Run: npm install -g npm@10.5.0 or npm@10.8.2
# Avoid: npm v10.9.x (known postinstall script bugs)
